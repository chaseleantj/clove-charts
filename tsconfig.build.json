{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "outDir": "dist",
      "declaration": true,
      "module": "es2022",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "target": "es2019",
      "skipLibCheck": true
    },
    "include": [
      "src/components/**/*"
    ],
    "exclude": [
      "node_modules",
      "src/app",
      "src/components/charts/examples/**/*",
      "src/**/*.test.tsx",
    ]
  }