{
    "name": "clove-charts",
    "version": "0.1.0",
    "description": "Beautiful charts made in React and D3",
    "license": "MIT",
    "sideEffects": [
        "*.css"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src/styles/clove.css"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/cjs/index.js"
        },
        "./styles/clove.css": "./src/styles/clove.css"
    },
    "scripts": {
        "dev": "next dev",
        "start": "next start",
        "build:site": "next build",
        "build:package": "rimraf dist && tsc -p tsconfig.build.json && tsc -p tsconfig.build.cjs.json",
        "prepublishOnly": "npm run build:package",
        "lint": "eslint",
        "format": "prettier --write ."
    },
    "peerDependencies": {
        "d3": "^7.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "katex": "^0.16.25",
        "react-katex": "^3.1.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/d3": "^7.4.3",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/react-katex": "^3.0.4",
        "@types/uuid": "^10.0.0",
        "babel-plugin-react-compiler": "1.0.0",
        "d3": "^7.9.0",
        "eslint": "^9",
        "eslint-config-next": "16.0.1",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.2",
        "typescript": "^5"
    },
    "keywords": [
        "react",
        "d3",
        "charts",
        "visualization",
        "data-viz"
    ]
}
